<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
		http://www.springframework.org/schema/webflow
		http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd
        ">

    <var name="handler" class="fr.smile.tutorial.CustomFormHandler"/>
    <var name="infosData" class="fr.smile.tutorial.InfosData"/>

    <view-state id="step1" model="infosData">
        <transition on="next" to="step2" />
    </view-state>

    <view-state id="step2" model="infosData">
        <transition on="previous" to="step1" />
        <transition on="next" to="step3" />
    </view-state>

    <view-state id="step3" model="infosData">
        <transition on="previous" to="step2" />
        <transition on="finish" to="step1" bind="false">
            <evaluate
                    expression="handler.processCustomFormData(infosData)" />
        </transition>
    </view-state>

</flow>